{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noEmit": true,
    "typeRoots": ["src/types/custom-types.d.ts"],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@configs/*": ["src/configs/*"],
      "@hooks": ["src/hooks/index.ts"],
      "@store/*": ["src/store/*"],
      "@types": ["src/types"],
      "@util/*": ["src/util/*"],
      "@constants/*": ["src/constants/*"],
      "@reducers": ["src/reducers/index.ts"],
      "@middleware": ["src/middleware/index.ts"],
      "@styles/*": ["src/styles/*"],
      "@queries/*": ["src/queries/*"],
      "@actions/*": ["src/actions/*"],
      "@assets/*": ["src/assets/*"],
      "@public/*": ["public/*"],
      "@test/*": ["test/*"]
    },
    "strict": false,
    "incremental": true
  },
  "include": ["next-env.d.ts", "src/**/*", "jest.config.js", "codegen.js"],
  "exclude": ["node_modules", "build", ".next"]
}
